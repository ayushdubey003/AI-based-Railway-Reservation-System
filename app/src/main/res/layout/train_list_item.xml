<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="@dimen/cardview_default_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="8dp">

            <RelativeLayout
                android:id="@+id/train_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/train_no_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="@dimen/cardview_default_radius">

                    <TextView
                        android:id="@+id/train_no_tv"
                        style="@style/internal_fonts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="16dp"
                        android:paddingTop="2dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="2dp"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        tools:text="15114"></TextView>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/train_name_tv"
                    style="@style/internal_fonts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_toRightOf="@id/train_no_cv"
                    android:textAllCaps="true"
                    android:textColor="#626262"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Lucknow Jn Express"></TextView>

                <ImageView
                    android:id="@+id/route_iv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_location_on_black_24dp"></ImageView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/start_time_tv"
                    style="@style/internal_fonts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:textColor="#626262"
                    tools:text="1:55 AM"></TextView>

                <LinearLayout
                    android:id="@+id/duration_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="24dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="#626262"></View>

                    <TextView
                        android:id="@+id/duration_tv"
                        style="@style/internal_fonts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:text="06h29m"
                        android:textColor="#727272"
                        android:textSize="12sp"></TextView>

                    <View
                        android:layout_width="24dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="#626262"></View>

                </LinearLayout>

                <TextView
                    android:id="@+id/end_time_tv"
                    style="@style/internal_fonts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:textColor="#626262"
                    tools:text="8:25 AM"></TextView>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textColor="#ff0000"
                    android:textSize="14sp"
                    tools:text="S"></TextView>

                <TextView
                    android:id="@+id/mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textColor="#ff0000"
                    android:textSize="14sp"
                    tools:text="M"></TextView>

                <TextView
                    android:id="@+id/tue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textColor="#ff0000"
                    android:textSize="14sp"
                    tools:text="T"></TextView>

                <TextView
                    android:id="@+id/wed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textColor="#ff0000"
                    android:textSize="14sp"
                    tools:text="W"></TextView>

                <TextView
                    android:id="@+id/thurs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textColor="#ff0000"
                    android:textSize="14sp"
                    tools:text="T"></TextView>

                <TextView
                    android:id="@+id/fri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textColor="#ff0000"
                    android:textSize="14sp"
                    tools:text="F"></TextView>

                <TextView
                    android:id="@+id/sat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textColor="#ff0000"
                    android:textSize="14sp"
                    tools:text="S"></TextView>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/view_six_days_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    app:cardBackgroundColor="@color/bluishShadeColor"
                    app:cardCornerRadius="@dimen/cardview_default_radius">

                    <TextView
                        android:id="@+id/view_six_days_tv"
                        style="@style/internal_fonts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="4dp"
                        android:paddingTop="5dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="5dp"
                        android:text="View 6 days Availability"
                        android:textColor="#fff"
                        android:textSize="13sp"></TextView>

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/bluishShadeColor"
                        app:cardCornerRadius="@dimen/cardview_default_radius"
                        app:contentPadding="1dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/travel_class_tv"
                                style="@style/internal_fonts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="#fff"
                                android:paddingLeft="4dp"
                                android:paddingTop="4dp"
                                android:paddingRight="4dp"
                                android:paddingBottom="4dp"
                                android:textColor="#626262"
                                android:textSize="13sp"
                                tools:text="SL"></TextView>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ProgressBar
                                    android:id="@+id/fare_progress"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_centerInParent="true"
                                    android:indeterminateTint="#fff" />

                                <TextView
                                    android:id="@+id/fare_tv"
                                    style="@style/internal_fonts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="4dp"
                                    android:paddingTop="4dp"
                                    android:paddingRight="4dp"
                                    android:paddingBottom="4dp"
                                    android:text="â‚¹ 190"
                                    android:textColor="#fff"
                                    android:textSize="13sp"
                                    android:visibility="invisible"></TextView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#fff">

                                <ProgressBar
                                    android:id="@+id/availability_progress"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:visibility="visible"
                                    android:layout_centerInParent="true" />

                                <TextView
                                    android:id="@+id/availability_tv"
                                    style="@style/internal_fonts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="4dp"
                                    android:paddingTop="4dp"
                                    android:paddingRight="4dp"
                                    android:paddingBottom="4dp"
                                    android:text="Available 25"
                                    android:textColor="#626262"
                                    android:textSize="13sp"
                                    android:visibility="invisible"></TextView>
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>