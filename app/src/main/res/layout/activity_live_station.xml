<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#eeeeee"
    android:layout_height="match_parent"
    tools:context=".Activities.LiveStation">

    <LinearLayout
        android:id="@+id/app_bar_ls"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back_ls"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="#fff"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_arrow_back_black_24dp"/>
        <TextView
            tools:text="Station Name"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            style="@style/font"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/optional_layer"
        android:layout_below="@+id/app_bar_ls"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:padding="12dp"
            android:layout_height="wrap_content"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_to_arrow_right_black_24dp"/>
        <EditText
            android:id="@+id/ls_optional_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:background="@null"
            android:editable="false"
            android:focusableInTouchMode="false"
            android:hint="To Station (Optional)"
            android:maxLines="1"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ls_optional_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_close_black_24dp" />

        <LinearLayout
            android:id="@+id/ls_optional_open"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/bluishShadeColor">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="9dp"
                android:src="@drawable/ic_search_black_24dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/header_ls"
        android:layout_below="@+id/optional_layer"
        android:layout_width="match_parent"
        android:background="#000"
        android:layout_height="wrap_content">
        <TextView
            tools:text="Train No"
            android:layout_weight="3"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:padding="6dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            style="@style/font"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            tools:text="scheduled"
            android:layout_weight="2"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:padding="6dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            style="@style/font"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            tools:text="expected"
            android:textSize="14sp"
            android:layout_weight="2"
            android:textAllCaps="true"
            android:padding="6dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            style="@style/font"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/live_station_list"
        android:layout_below="@+id/header_ls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>