<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AutomatedTatkal">

    <ScrollView
        android:id="@+id/zeroth_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/app_bar_at"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Automated Tatkal Form"
                        android:textAllCaps="true"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        style="@style/internal_fonts"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="MDP to tata | 14 feb friday 2020"
                        android:textAllCaps="true"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        style="@style/internal_fonts"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/first_layer_at"
                android:layout_below="@+id/app_bar_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="@dimen/cardview_default_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <RelativeLayout
                        android:id="@+id/train_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/train_no_cv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/colorPrimary"
                            app:cardCornerRadius="@dimen/cardview_default_radius">

                            <TextView
                                android:id="@+id/train_no_tv"
                                style="@style/internal_fonts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingLeft="16dp"
                                android:paddingTop="2dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="2dp"
                                android:textColor="#fff"
                                android:textSize="14sp"
                                android:text="15114"></TextView>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/train_name_tv"
                            style="@style/internal_fonts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="32dp"
                            android:layout_toRightOf="@id/train_no_cv"
                            android:textAllCaps="true"
                            android:textColor="#626262"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Lucknow Jn Express"></TextView>

                        <ImageView
                            android:id="@+id/route_iv"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_location_on_black_24dp"></ImageView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/start_time_tv"
                            style="@style/internal_fonts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="8dp"
                            android:layout_centerVertical="true"
                            android:textColor="#626262"
                            android:text="1:55 AM"></TextView>

                        <LinearLayout
                            android:id="@+id/duration_ll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="24dp"
                                android:layout_height="1dp"
                                android:layout_gravity="center"
                                android:background="#626262"></View>

                            <TextView
                                android:id="@+id/duration_tv"
                                style="@style/internal_fonts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:text="06h29m"
                                android:textColor="#727272"
                                android:textSize="12sp"></TextView>

                            <View
                                android:layout_width="24dp"
                                android:layout_height="1dp"
                                android:layout_gravity="center"
                                android:background="#626262"></View>

                        </LinearLayout>

                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/end_time_tv"
                            style="@style/internal_fonts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="8dp"
                            android:textColor="#626262"
                            android:text="8:25 AM"></TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_alignParentLeft="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                style="@style/internal_fonts"
                                android:layout_gravity="center"
                                android:padding="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000"
                                android:text="Madhupur Jn"/>
                            <TextView
                                style="@style/internal_fonts"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000"
                                android:text="(MDP)"/>
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/bluishShadeColor"
                            app:cardCornerRadius="@dimen/cardview_default_radius"
                            app:contentPadding="1dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/travel_class_tv"
                                    style="@style/internal_fonts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/rounded_colored_border"
                                    android:paddingLeft="4dp"
                                    android:paddingTop="4dp"
                                    android:paddingRight="4dp"
                                    android:paddingBottom="4dp"
                                    android:textColor="#fff"
                                    android:textSize="10sp"
                                    android:text="SL"></TextView>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#fff">

                                    <TextView
                                        android:id="@+id/availability_tv"
                                        style="@style/internal_fonts"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="4dp"
                                        android:paddingTop="4dp"
                                        android:paddingRight="4dp"
                                        android:paddingBottom="4dp"
                                        android:text="Available 25"
                                        android:textColor="#000"
                                        android:textSize="10sp"/>
                                </RelativeLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                style="@style/internal_fonts"
                                android:layout_gravity="center"
                                android:padding="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000"
                                android:text="Tatanagar Jn"/>
                            <TextView
                                style="@style/internal_fonts"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000"
                                android:text="(TATA)"/>
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/second_layer_at"
                android:layout_below="@+id/first_layer_at"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="@dimen/cardview_default_elevation"
                app:cardElevation="@dimen/cardview_default_elevation">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="boarding station |"
                        android:textAllCaps="true"
                        android:padding="8dp"
                        android:layout_centerVertical="true"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        style="@style/internal_fonts"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/third_layer_at"
                android:layout_below="@+id/second_layer_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="@dimen/cardview_default_elevation"
                app:cardElevation="@dimen/cardview_default_elevation">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/passenger_text"
                        android:text="add passengers"
                        android:textAllCaps="true"
                        android:textSize="10sp"
                        android:padding="8dp"
                        android:layout_gravity="center"
                        style="@style/internal_fonts"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/passenger_list_at"
                        android:layout_marginTop="15dp"
                        android:padding="8dp"
                        android:layout_below="@+id/passenger_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_below="@+id/passenger_list_at"
                        android:id="@+id/add_new_passenger"
                        android:text="+ add new"
                        android:textAllCaps="true"
                        android:padding="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        style="@style/internal_fonts"
                        android:textStyle="bold"
                        android:textColor="@color/bluishShadeColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fourth_layer_at"
                android:layout_below="@+id/third_layer_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="@dimen/cardview_default_elevation"
                app:cardElevation="@dimen/cardview_default_elevation">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/mobile_text_at"
                        android:text="Passenger Mobile Number"
                        android:textAllCaps="false"
                        android:padding="8dp"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        style="@style/font"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_below="@+id/mobile_text_at"
                        android:layout_width="match_parent"
                        android:padding="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="+91-"
                            android:textAllCaps="false"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            style="@style/internal_fonts"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:inputType="number"
                            android:hint="Contact Number"
                            android:textSize="10sp"
                            android:layout_gravity="center"
                            style="@style/font"
                            android:textColor="#000"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fifth_layer_at"
                android:layout_below="@+id/fourth_layer_at"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="@dimen/cardview_default_elevation"
                app:cardElevation="@dimen/cardview_default_elevation">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="terms and conditions wala lmba sa text"
                        android:textAllCaps="true"
                        android:padding="8dp"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        style="@style/internal_fonts"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/sixth_layer_at"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="#4d4d4d"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp">
            <TextView
                android:text="$165"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:layout_gravity="start"
                style="@style/internal_fonts"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="per person"
                android:textAllCaps="true"
                android:textSize="10sp"
                android:layout_gravity="start"
                style="@style/internal_fonts"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:layout_margin="5dp"
            android:layout_marginRight="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="30dp">
            <Button
                android:id="@+id/review_button_at"
                android:textSize="10sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#fff"
                android:text="Review Journey Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>



</RelativeLayout>